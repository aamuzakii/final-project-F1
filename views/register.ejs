<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
</head>

<body>
  <%- include('partials/navbar') %>

  <br><br>
  <div class="col-sm-4 offset-sm-4">
    <h1>Register</h1>
    <section class="login" id="login">
      <div class="container">
        <div class="row"><br>
          <div class="col-sm-12 col-sm-6">
            <a class="btn btn-success me-3" href="/login" role="button">Login</a>
            <a class="btn btn-warning me-3" href="/register" role="button">Register</a>
          </div>
        </div>
      </div>
    </section><br>

    <div>
      <% if (sent) { %>
        <a class="btn btn-danger me-3 col-sm-8" role="button"><%= sent.split('-').join(' ') %></a>
      <% } %>
    </div>
    
    <form action="" method="POST">
      <div class="mb-3">
        <label for="text" class="form-label">Username</label>
        <input type="text" name="username" class="form-control" id="text">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" class="form-control" id="email">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="password">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  <div>
    <% if (validasi) { %>
      <a class="btn btn-danger me-3 col-sm-4 offset-sm-4" role="button"><%= validasi %></a>
    <% } %>
  </div>

</body>

</html>